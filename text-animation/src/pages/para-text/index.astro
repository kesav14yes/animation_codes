---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Home">
  <div class="flex flex-col">
    <div class="h-screen bg-primary-50 grid place-content-center">
      <div class="overflow-hidden">
        <h1
          class="font-Futura font-300 text-64 text-center"
          data-anim="gsap-text"
          data-anim-type="slide-up"
          data-anim-target="parah"
        >
          Lorem ipsum dolor sit amet consectetur, adipisicing elit. Provident
          ratione, cum nobis adipisci quia corrupti? Rerum sint suscipit
          perferendis quo eos fugiat dicta vitae qui dolore. Enim neque magni
          rem.
        </h1>
      </div>
    </div>
  </div>

  <script>
    import { TextAnimClass } from "@/gsap/classes/TextAnim.class";
    new TextAnimClass().init();
  </script>
</Layout>

---
import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

interface Props extends HTMLAttributes<"h2"> {
    className?: string;
}

const { className = "", ...rest } = Astro.props;

const h2 = tv({
    base: ["font-SourceSerif", "font-300 text-34", "lg:text-40"],
});
---

<h2 class={h2({ class: className })} {...rest}>
    <slot />
</h2>
